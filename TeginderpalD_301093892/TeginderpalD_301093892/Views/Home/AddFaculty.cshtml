@model TeginderpalD_301093892.Models.Faculty

@{
        ViewBag.Title = "add Faculty";
        Layout = "_BasicLayout";
    }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddFaculty</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <div class="panel panel-success"> 
        <div class="panel-heading text-center"> <img src="/images/prof1.png" class="logo" width="50" height="50" /><h4>Add Faculty</h4></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <form class="p-a-1" asp-action="AddFaculty" method="Post">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="FacultyName">Name</label>
                            <input  class="form-control" asp-for="FacultyName" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="FacultyDepartment">Department</label>
                            <input class="form-control" asp-for="FacultyDepartment" placeholder="Department">
                        </div>
                        <div class="form-group">
                            <label asp-for="FacultyCourse">Course</label>
                            <input class="form-control" asp-for="FacultyCourse" placeholder="Course">
                        </div>
                        <div class="form-group">
                            <label asp-for="FacultyPhone">Phone</label>
                            <input type= class="form-control" asp-for="FacultyPhone" placeholder="phone">
                        </div>
                        <div class="form-group">
                            <label asp-for="FacultyEmail">Email</label>
                            <input type="email" class="form-control" asp-for="FacultyEmail" placeholder="Email">
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                        <button asp-action="Index" class="btn btn-danger">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>